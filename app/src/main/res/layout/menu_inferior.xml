<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomBox"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- LÃ­nea superior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray" />

    <!-- Contenedor de iconos y etiquetas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Etiqueta 1 -->
        <LinearLayout
            android:id="@+id/btnInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivInicio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home"
                android:tint="@color/grayligth" />

            <TextView
                android:id="@+id/tvInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Inicio"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Etiqueta 2 -->
        <LinearLayout
            android:id="@+id/btnBuscar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBuscar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/search"
                android:tint="@color/grayligth" />

            <TextView
                android:id="@+id/tvBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Buscar"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Etiqueta 3 -->
        <LinearLayout
            android:id="@+id/btnMedicina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMedicina"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/aid_kit"
                android:tint="@color/grayligth" />

            <TextView
                android:id="@+id/tvMedicina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Medicina"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Etiqueta 4 -->
        <LinearLayout
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPerfil"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user"
                android:tint="@color/grayligth" />

            <TextView
                android:id="@+id/tvPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Perfil"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>